{
    "compilerOptions": {
      "target": "es5",                  /* Specify ECMAScript target version */
      "module": "commonjs",             /* Specify module code generation */
      "strict": true,                   /* Enable all strict type-checking options */
      "esModuleInterop": true,          /* Enables emit interoperability between CommonJS and ES Modules via `import = require()` syntax */
      "forceConsistentCasingInFileNames": true, /* Ensure consistent casing in filenames */
      "sourceMap": true,                /* Generates corresponding '.map' file */
      "outDir": "./dist",               /* Redirect output structure to the directory */
      "rootDir": "./src"                /* Specify the root directory of input files */
    },
    "include": ["src/**/*.ts"],        /* Files to include in compilation */
    "exclude": ["node_modules"]        /* Files to exclude from compilation */
  }
  